
<div class="form-control-lg w-50 border border-primary m-auto"
>
  <h2>Ingreso de productos</h2>
    <div class="mb-3 row">
      <label for="inputTitle" class="col-sm-2 col-form-label">Nombre</label>
      <div class="col-sm-10">
        <input type="text" name="title" class="form-control" id="inputTitle" placeholder="Ingrese el nombre del producto"  />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputPrice" class="col-sm-2 col-form-label">Precio</label>
      <div class="col-sm-10">
        <input
          type="number"
          name="price"
          class="form-control"
          id="inputPrice"
          placeholder="Ingrese un precio"
          
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputThumbnail" class="col-sm-2 col-form-label">URL foto</label>
      <div class="col-sm-10">
        <input
          type="text"
          name="thumbnail"
          class="form-control"
          id="inputThumbnail"
          placeholder="Ingrese una imagen url del producto"
          
        />
      </div>
    </div>

    <div class="col-auto">
      <button id="botónCargar" class="btn btn-primary">Cargar producto</button>
    </div>
</div>

<div class="mb-3 mt-3">
  <div class="form-control-lg w-50 m-auto">
    <table class="form-control-lg w-50 m-auto bg-dark text-light">
        <thead>
            <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Foto</th>
            </tr>
        </thead>
        <tbody id ="list" class="bg-light text-dark">
        
        </tbody>
    </table>
  </div>

</div>


<div class="form-control-lg w-50 border border-primary m-auto"
>
  <h2>Centro de mensajes</h2>
  <h2 id="centroMsg"></h2>
    <div class="mb-3 row">
      <label for="inputUser" class="col-sm-2 col-form-label">Nombre Usuario</label>
      <div class="col-sm-10">
        <input type="text" name="inputUser" class="form-control" id="inputUser" placeholder="Ingrese su nombre de usuario"  />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputName" class="col-sm-2 col-form-label">Nombre</label>
      <div class="col-sm-10">
        <input type="text" name="inputName" class="form-control" id="inputName" placeholder="Ingrese su nombre"  />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputLastName" class="col-sm-2 col-form-label">Apellido</label>
      <div class="col-sm-10">
        <input type="text" name="inputLastName" class="form-control" id="inputLastName" placeholder="Ingrese su apellido"  />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input type="email" name="inputEmail" class="form-control" id="inputEmail" placeholder="Ingrese su email"  />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputAge" class="col-sm-2 col-form-label">Edad</label>
      <div class="col-sm-10">
        <input type="number" name="inputAge" class="form-control" id="inputAge" placeholder="Ingrese su edad"  />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputPhoto" class="col-sm-2 col-form-label">Foto de Perfil</label>
      <div class="col-sm-10">
        <input type="text" name="inputPhoto" class="form-control" id="inputPhoto" placeholder="Ingrese su foto de Perfil"  />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="inputText" class="col-sm-2 col-form-label">Mensaje</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="inputText"
          placeholder="Ingrese su mensaje"
          
        />
      </div>
    </div>

    <div class="col-auto">
      <button id="botónEnviar" class="btn btn-primary">Enviar</button>
    </div>
</div>
<div class="mb-3 mt-3">
<div id="listaMensajes"></div>
  </div>
</div>